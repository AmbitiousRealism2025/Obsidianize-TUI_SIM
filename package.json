{
  "name": "bun-vibecoder-starter",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --hot index.ts",
    "start": "bun index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "build": "bun build ./index.ts --outdir ./build --target bun --minify",
    "build:dev": "bun build ./index.ts --outdir ./build --target bun",
    "validate": "bun scripts/env-validator.ts",
    "check": "bun tsc --noEmit",
    "lint": "bun eslint . --ext .ts,.js",
    "clean": "rm -rf build/ dist/ node_modules/.cache",
    "serve": "bun build ./index.ts --outdir ./build --target bun --minify && bun ./build/index.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/dompurify": "^3.2.0",
    "@types/figlet": "^1.5.8",
    "@types/marked": "^6.0.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "dompurify": "^3.2.7",
    "figlet": "^1.7.0",
    "gray-matter": "^4.0.3",
    "marked": "^16.4.0",
    "pdf-parse": "^2.2.9",
    "pdf2pic": "^3.2.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  }
}